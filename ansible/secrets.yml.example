# ============================================================================
# Ansible Configuration for Forgejo Server
# ============================================================================
# Copy this file: cp secrets.yml.example secrets.yml
# IMPORTANT: container_ip MUST match opentofu/secrets.auto.tfvars!
# ============================================================================

# Container IP (without CIDR notation - no /24!)
container_ip: "192.168.10.51"

# PostgreSQL password for Forgejo database
# Generate strong password: openssl rand -base64 24
db_password: "CHANGE_ME_generate_strong_password"

# Optional: If you need root password for some tasks
# (Usually not needed as OpenTofu sets it)
# root_password: "same_as_in_opentofu"