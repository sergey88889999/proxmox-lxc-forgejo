# ============================================================================
# Proxmox Connection Configuration
# ============================================================================
# Proxmox API endpoint
pm_api_url      = "https://192.168.10.5:8006/api2/json"
pm_tls_insecure = true  # Set to true if using self-signed certificates

# Authentication: Root user with password
pm_user     = "root@pam"
pm_password = "your_proxmox_password"

# Alternative: API Token authentication (more secure)
# Uncomment and use instead of password if you have API token configured
# pm_api_token_id     = "tofu@pve!tofu-token"
# pm_api_token_secret = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# ============================================================================
# LXC Container Configuration
# ============================================================================
# Root password for the container
root_password = "container_root_password"

# Dedicated IP addresses for different environment workspaces
# Format: IPv4/CIDR
ip_prod = "192.168.10.51/24"
ip_test = "192.168.10.52/24"


